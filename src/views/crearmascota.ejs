<%- include("templates/cabecerasignin", {tituloweb: "Nueva Mascota"}) %>

    <div class="container mt-4 mb-4">
        <h1>Ingresa los datos de tu mascota</h1>
        <form action="/home/mismascotas/crearmascota" method="post">
            <input 
                type="text"
                placeholder="Nombre de la mascota"
                class="form-control my-2"
                name="nombre"
            >
            <input 
                type="text"
                placeholder="Raza de la mascota"
                class="form-control my-2"
                name="raza"
            >
            <input 
                type="number"
                placeholder="Edad"
                class="form-control my-2"
                name="edad"
            >
            <input 
                type="text"
                placeholder="Genero (macho - hembra)"
                class="form-control my-2"
                name="genero"
            >
            <input 
                type="text"
                placeholder="Especie (perro, gato, roedor, pez)"
                class="form-control my-2"
                name="especie"
            >
            <button
                class="btn btn-success btn-block"
                type="submit"
            >Crear mascota
            </button>
        </form>
    </div>

