<%- include("templates/cabecerasignin", {tituloweb: "Mis Mascotas"}) %>

    <div class="container mt-4">

        <h2 class="h2 my-4">Tus mascotas registradas</h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Raza</th>
                <th scope="col">Edad</th>
                <th scope="col">Genero</th>
                <th scope="col">Especie</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>

                <% if (arrayMascotas.length > 0) { %>
                    <% arrayMascotas.forEach(mascota => { %>

                        <tr>
                            <th scope="row"><%= mascota.id %></th>
                            <td><%= mascota.nombre %></td>
                            <td><%= mascota.raza %></td>
                            <td><%= mascota.edad %></td>
                            <td><%= mascota.genero %></td>
                            <td><%= mascota.especie %></td>
                            <td>
                                <a 
                                    href="mismascotas/<%= mascota.id %>"
                                    class="btn btn-warning btn-sm"
                                >
                                Editar
                                </a>
                            </td>
                        </tr>

                    <% }) %>
                <% } %>
            </tbody>
        </table>

        <a 
            href="mismascotas/crearmascota"
            class="btn btn-success btn-block my-4"
        >
            Ingresar nueva mascota
        </a>

    </div>

