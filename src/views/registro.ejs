<%- include("templates/cabecerahome", {tituloweb: "Registro"}) %>

<div class="container-fluid">
    <div class="row">
        <p class="h3 mt-5 ml-5 text-center">Gracias por registrarte!</p>
    </div>
    <div class="row">
        <p class="h4 text-center ml-3 mt-2">Completa los siguientes campos:</p>
    </div>
    <div class="row mt-3">
        <div class="col-1"></div>
        <div class="col-6">
            <form class="row g-3" action="/usuarios/registro" method="post">          
                    <div class="col-6">
                        <label for="tipodocumento" class="form-label">Tipo Documento</label>
                        <select id="tipodocumento" class="form-select" name="tipodocumento" required>
                            <option selected>Elegir</option>
                            <option>Cedula de Ciudadania</option>
                            <option>Cedula de Extranjeria</option>
                            <option>Registro Civil</option>
                            <option>Pasaporte</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <label for="identificacion" class="form-label">Identificacion</label>
                        <input type="number" class="form-control" id="identificacion" name="identificacion" required>
                    </div>
                    <div class="col-6 mt-3">
                        <label for="nombres" class="form-label">Nombres</label>
                        <input type="text" class="form-control" id="nombres" name="nombres" required>
                    </div>
                    <div class="col-6 mt-3">
                        <label for="apellidos" class="form-label">Apellidos</label>
                        <input type="text" class="form-control" id="apellidos" name="apellidos" required>
                    </div>
                    <div class="col-md-6 mt-3">
                        <label for="correoelectronico" class="form-label">Correo Electronico</label>
                        <input type="email" class="form-control" id="correoelectronico" name="correoelectronico" required>
                    </div>
                    <div class="col-md-6 mt-3">
                        <label for="contrasena" class="form-label">Contrase√±a</label>
                        <input type="password" class="form-control" id="contrasena" name="contrasena" required>
                    </div>
                    <div class="col-12 mt-3">
                        <label for="direccion" class="form-label">Direccion</label>
                        <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Calle 123 15-20 sur" required>
                    </div>
                    <div class="col-md-6 mt-3">
                        <label for="ciudad" class="form-label">Ciudad</label>
                        <input type="text" class="form-control" id="ciudad" name="ciudad" required>
                    </div>
                    <div class="col-md-6 mt-3">
                        <label for="telefono" class="form-label">Telefono</label>
                        <input type="number" class="form-control" id="telefono" name="telefono" required>
                    </div>
                    <div class="col-12 mt-3">
                        <input type="checkbox" id="inputterminos" class="form-check-input" name="terminos" required>
                        <label for="inputterminos" class="form-label-checkbox">Acepto terminos y condiciones</label>
                    </div>
                    <div class="col-12 mt-2">
                        <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
                    </div>
            </form>
        </div>
        <div class="col-5">
            <figure>
                <img src="/images/perro_registro.avif" alt="">
            </figure>
        </div>
    </div>
</div>

<div class="mt-5"></div>



